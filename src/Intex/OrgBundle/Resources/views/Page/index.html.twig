{% extends 'IntexOrgBundle::layout.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/font-awesome/css/font-awesome.min.css')}}" type="text/css"/>
    <style type="text/css">
        .main-col {
            border-right: 0px;
        }
    </style>
{% endblock %}

{% block namepage %}
    <h3>
        Main
    </h3>
{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-xs-6 col-md-3">
            <a href="{{ path('intex_org_users') }}" class="thumbnail">
                <i class="fa fa-users fa-5x" aria-hidden="true"></i>
                <p>Show Users</p>
            </a>
        </div>
        <div class="col-xs-6 col-md-3">
            <a href="{{ path('intex_org_companies') }}" class="thumbnail">
                <i class="fa fa-university fa-5x" aria-hidden="true"></i>
                <p>Show Organizations</p>
            </a>
        </div>
        <div class="col-xs-6 col-md-3">
            <a href="{{ path('intex_org_user_upload')}}" class="thumbnail">
                <i class="fa fa-upload fa-5x" aria-hidden="true"></i>
                <p>Upload users</p>

            </a>
        </div>
    </div>

    {% for error_message in app.session.flashBag.get('error') %}
        <div class="alert alert-danger" role="alert">
            {{ error_message }}
        </div>
    {% endfor %}

    {% for success_message in app.session.flashBag.get('success') %}
        <div class="alert alert-success" role="alert">
            {{ success_message }}
        </div>
    {% endfor %}
{% endblock %}

{% block sidebar %}
{% endblock %}