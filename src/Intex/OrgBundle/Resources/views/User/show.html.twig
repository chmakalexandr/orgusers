{% extends 'IntexOrgBundle::layout.html.twig' %}

{% block body %}
    <div class="show_user">
        <table>
            <tr>
                <td>Фамилия:</td><td>{{ user.lastname }}</td>
            </tr>
            <tr>
                <td>Имя:</td><td>{{ user.firstname }}</td>
            </tr>
            <tr>
                <td>Отчество:</td><td>{{ user.middlename }}</td>
            </tr>
            <tr>
                <td>Дата рождения:</td><td>{{ user.bithday|date("m/d/Y")}}</td>
            </tr>
            <tr>
                <td>ИНН:</td><td>{{ user.inn}}</td>
            </tr>
            <tr>
                <td>СНИЛС:</td><td>{{ user.snils}}</td>
            </tr>
            <tr>
                <td>Организация:</td><td><a href="{{ path('intex_org_company_show', { 'company_id': user.company.id }) }}">{{ user.company }} </a></td>
            </tr>
        </table>

    </div>

{% endblock %}