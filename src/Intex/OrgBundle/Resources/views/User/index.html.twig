{% extends 'IntexOrgBundle::layout.html.twig' %}

{% block body %}
    <h3>Users:</h3>
    <div class="users">
        <div class="row">
            {% for user in users %}
                <div class="col-md-12 {{ cycle(['even', 'odd'],  loop.index0) }}">
                        <a href="{{ path('intex_org_user_show', { 'user_id': user.id }) }}">{{ user.lastname }}&nbsp;{{ user.firstname }} {{ user.middlename }} </a>
                </div>
             {% else %}
                    <p>There are no company</p>
            {% endfor %}
        </div>
    </div>
{% endblock %}

